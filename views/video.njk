{% extends "layout.njk" %}
{% block head %}
  <title>
    Fernandes - {{item.title}}</title>
{% endblock %}



{% block content %}

  <div class="card-box video">
    <header>
      <h1>{{item.title}}</h1>
    </header>
  </div>
  <section class="video">

      
      <div class="card ">
        <div class="card__video-container">

          <iframe src="https://www.youtube.com/embed/{{item.id}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
          
        </div>
        <div class="card__content">
          <p>"{{item.title}}"</p>
        </div>
        <div class="card__info">
          <p>{{item.durations}}</p>
          <p class="card__price">
            <i title="{{item.id}}" id="play" class="material-icons" cursor=""></i>
          </p>
        </div>
      </div>

      
      
    </section>
    
  {% endblock %}